<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/latitude_col"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/longitude_col"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/latitude_col" />

    <TextView
        android:id="@+id/note_col"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/longitude_col" />

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="delete_button"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_delete" />

        <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="edit_button"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_edit" />

        <ImageButton
            android:id="@+id/map_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="map_button"
            android:src="@android:drawable/ic_menu_mapmode" />
    </LinearLayout>
</RelativeLayout>